<Ui xmlns="http://www.blizzard.com/wow/ui/">
  <Frame
    name="AuctionatorSellingBagFrame"
    virtual="true"
    parentKey="BagListing"
    mixin="AuctionatorBagUseMixin"
  >
    <Scripts>
      <OnLoad method="OnLoad" />
      <OnShow method="OnShow" />
      <OnHide method="OnHide" />
    </Scripts>

    <Frames>
      <Frame inherits="AuctionatorBagViewTemplate">
        <Anchors>
            <Anchor point="TOPLEFT"/>
            <Anchor point="BOTTOMRIGHT"/>
        </Anchors>
      </Frame>

      <Button text="AUCTIONATOR_L_CUSTOMISE" inherits="UIPanelDynamicResizeButtonTemplate" frameLevel="600" hidden="true">
        <Anchors>
            <Anchor point="TOPRIGHT" x="-28"/>
        </Anchors>
        <Scripts>
          <OnClick>
            self:GetParent():ToggleCustomiseMode()
          </OnClick>
        </Scripts>
      </Button>
    </Frames>
  </Frame>
</Ui>
