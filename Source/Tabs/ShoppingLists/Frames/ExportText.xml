<Ui xmlns="http://www.blizzard.com/wow/ui/">
  <Frame
    name="AuctionatorExportTextFrame"
    mixin="AuctionatorExportTextFrameMixin"
    inherits="SimplePanelTemplate"
    frameStrata="Dialog"
    enableMouse="true"
    virtual="true"
    hidden="true"
  >
    <Size x="350" y="320" />

    <Scripts>
      <OnLoad method="OnLoad"/>
      <OnShow method="OnShow" />
    </Scripts>

    <Frames>
      <ScrollFrame parentKey="ScrollFrame" inherits="UIPanelScrollFrameTemplate">
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent.Inset" relativePoint="TOPLEFT" y="-4"/>
          <Anchor point="BOTTOMRIGHT" relativeKey="$parent.Inset" relativePoint="BOTTOMRIGHT" x="-22" y="4" />
        </Anchors>
        <ScrollChild>
          <EditBox autoFocus="false" multiLine="true" parentKey="ExportString">
            <FontString inherits="ChatFontNormal" justifyH="LEFT"/>
            <Scripts>
              <OnEscapePressed>self:ClearFocus()</OnEscapePressed>
            </Scripts>
          </EditBox>
        </ScrollChild>
      </ScrollFrame>

      <!-- Action Buttons -->
      <Button parentKey="Close" inherits="UIPanelDynamicResizeButtonTemplate" text="AUCTIONATOR_L_CLOSE">
        <Anchors>
          <Anchor point="TOPRIGHT" relativeKey="$parent.Inset" relativePoint="BOTTOMRIGHT"/>
        </Anchors>
        <Scripts>
          <OnClick>self:GetParent():OnCloseClicked()</OnClick>
        </Scripts>
      </Button>
    </Frames>

    <Layers>
      <Layer>
        <FontString text="AUCTIONATOR_L_COPY_TEXT_HEADER" inherits="GameFontHighlight">
          <Anchors>
            <Anchor point="TOP" relativeTo="$parent" relativePoint="TOP" y="-10"/>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </Frame>
</Ui>