<Ui xmlns="http://www.blizzard.com/wow/ui/">
  <Frame
    name="AuctionatorConfigBasicOptionsFrame"
    mixin="AuctionatorConfigBasicOptionsFrameMixin"
    parent="InterfaceOptionsFrame">
    <Scripts>
      <OnLoad method="OnLoad"/>
      <OnShow method="OnShow"/>
    </Scripts>
    <Frames>
      <Frame name="$parent_TitleArea" inherits="AuctionatorConfigurationTitleFrame" parentKey="TitleArea">
        <KeyValues>
          <KeyValue key="titleText" value="Basic Options" type="string" />
          <KeyValue key="subTitleText" value="Basic options for enabling features in Auctionator." type="string"/>
        </KeyValues>
      </Frame>

      <Frame name="$parent_TooltipHeading" inherits="AuctionatorConfigurationHeadingFrame" parentKey="TooltipHeading">
        <KeyValues>
          <KeyValue key="headingText" value="Tooltip Settings" type="string"/>
        </KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent_TitleArea" relativePoint="BOTTOMLEFT"/>
        </Anchors>
      </Frame>

      <Frame name="$parent_MailboxTooltips" inherits="AuctionatorConfigurationCheckbox" parentKey="MailboxTooltips">
        <KeyValues>
          <KeyValue key="labelText" value="Show mailbox tooltips." type="string" />
          <KeyValue key="tooltipTitleText" value="Mailbox Tooltips" type="string" />
          <KeyValue key="tooltipText" value="Shows Auctionator information for items in your mailbox on mouseover." type="string"/>
        </KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent_TooltipHeading" relativePoint="BOTTOMLEFT" />
        </Anchors>
      </Frame>

      <Frame name="$parent_VendorTooltips" inherits="AuctionatorConfigurationCheckbox" parentKey="VendorTooltips">
        <KeyValues>
          <KeyValue key="labelText" value="Show vendor tooltips." type="string" />
          <KeyValue key="tooltipTitleText" value="Vendor Tooltip Information" type="string" />
          <KeyValue key="tooltipText" value="Show vendor information in tooltip on mouseover." type="string"/>
        </KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent_MailboxTooltips" relativePoint="BOTTOMLEFT" />
        </Anchors>
      </Frame>

      <Frame name="$parent_AuctionTooltips" inherits="AuctionatorConfigurationCheckbox" parentKey="AuctionTooltips">
        <KeyValues>
          <KeyValue key="labelText" value="Show auction tooltips." type="string" />
          <KeyValue key="tooltipTitleText" value="Auction Tooltip Information" type="string" />
          <KeyValue key="tooltipText" value="Show auction information in tooltip on mouseover." type="string"/>
        </KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent_VendorTooltips" relativePoint="BOTTOMLEFT" />
        </Anchors>
      </Frame>

      <Frame name="$parent_EnchantTooltips" inherits="AuctionatorConfigurationCheckbox" parentKey="EnchantTooltips">
        <KeyValues>
          <KeyValue key="labelText" value="Show enchant tooltips. (CURRENTLY DISABLED)" type="string" />
          <KeyValue key="tooltipTitleText" value="Enchant Tooltip Information" type="string" />
          <KeyValue key="tooltipText" value="Show enchant information in tooltip on mouseover. (Not functional at the moment.)" type="string"/>
        </KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent_AuctionTooltips" relativePoint="BOTTOMLEFT" />
        </Anchors>
      </Frame>

      <Frame name="$parent_ShiftStackTooltips" inherits="AuctionatorConfigurationCheckbox" parentKey="ShiftStackTooltips">
        <KeyValues>
          <KeyValue key="labelText" value="Show stack price when holding shift." type="string" />
          <KeyValue key="tooltipTitleText" value="Stack Prices" type="string" />
          <KeyValue key="tooltipText" value="When selected, the shift key must be held to see stack prices. When not selected, stack prices show by default." type="string"/>
        </KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent_EnchantTooltips" relativePoint="BOTTOMLEFT" />
        </Anchors>
      </Frame>

      <Frame name="$parent_ShoppingListHeading" inherits="AuctionatorConfigurationHeadingFrame" parentKey="ShoppingListHeading">
        <KeyValues>
          <KeyValue key="headingText" value="Shopping List Settings" type="string"/>
        </KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent_ShiftStackTooltips" relativePoint="BOTTOMLEFT"/>
        </Anchors>
      </Frame>

      <Frame name="$parent_ShowLists" inherits="AuctionatorConfigurationCheckbox" parentKey="ShowLists">
        <KeyValues>
          <KeyValue key="labelText" value="Show shopping list sidebar when Auction House is opened." type="string" />
          <KeyValue key="tooltipTitleText" value="Shopping List Sidebar" type="string" />
          <KeyValue key="tooltipText" value="Shows the shopping list sidebar when the auction house is opened. If the sidebar is hidden, you may show it by clicking the 'Shopping Lists' button in the auction house." type="string"/>
        </KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent_ShoppingListHeading" relativePoint="BOTTOMLEFT" />
        </Anchors>
      </Frame>

      <Frame name="$parent_Autoscan" inherits="AuctionatorConfigurationCheckbox" parentKey="Autoscan">
        <KeyValues>
          <KeyValue key="labelText" value="Run autoscan when Auction House is opened." type="string" />
          <KeyValue key="tooltipTitleText" value="Autoscan" type="string" />
          <KeyValue key="tooltipText" value="Run a full scan when the auction house is opened. If not selected, you may run a full scan by clicking the 'Full Scan' button in the auction house." type="string"/>
        </KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent_ShowLists" relativePoint="BOTTOMLEFT" />
        </Anchors>
      </Frame>

      <Frame name="$parent_AutoListSearch" inherits="AuctionatorConfigurationCheckbox" parentKey="AutoListSearch">
        <KeyValues>
          <KeyValue key="labelText" value="Automatically scan for shopping list items." type="string" />
          <KeyValue key="tooltipTitleText" value="Automatic List Search" type="string" />
          <KeyValue key="tooltipText" value="When a list is selected, automatically scan the auction house for the list entries. When this option is off, you may scan for the entire list when selecting the 'Search' button in the Shopping List sidebar." type="string"/>
        </KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent_Autoscan" relativePoint="BOTTOMLEFT" />
        </Anchors>
      </Frame>

      <Frame name="$parent_DebugHeading" inherits="AuctionatorConfigurationHeadingFrame" parentKey="DebugHeading">
        <KeyValues>
          <KeyValue key="headingText" value="Developer Settings" type="string"/>
        </KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent_AutoListSearch" relativePoint="BOTTOMLEFT"/>
        </Anchors>
      </Frame>

      <Frame name="$parent_Debug" inherits="AuctionatorConfigurationCheckbox" parentKey="Debug">
        <KeyValues>
          <KeyValue key="labelText" value="Toggle debug output." type="string" />
          <KeyValue key="tooltipTitleText" value="Auctionator Debug" type="string" />
          <KeyValue key="tooltipText" value="This is used by the maintainers to output debug messages to the chat frame." type="string"/>
        </KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent_DebugHeading" relativePoint="BOTTOMLEFT" />
        </Anchors>
      </Frame>
    </Frames>
  </Frame>
</Ui>