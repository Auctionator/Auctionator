<Ui xmlns="http://www.blizzard.com/wow/ui/">
  <Frame name="AuctionatorShoppingListFrameTemplate" inherits="SimplePanelTemplate" parent="UIParent" hidden="true" mixin="AuctionatorShoppingListFrameMixin, AuctionatorEventBus" virtual="true">
    <Size x="500" />

    <Scripts>
      <OnLoad method="OnLoad" />
    </Scripts>

    <Layers>
      <Layer level="OVERLAY">
        <FontString inherits="GameFontNormal" text="Auctionator">
          <Anchors>
            <Anchor point="TOP" relativeTo="$parent" relativePoint="TOP">
              <Offset>
                <AbsDimension x="0" y="-10"/>
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>

    <Frames>
      <!-- Shopping List Dropdown -->
      <Frame inherits="UIDropDownMenuTemplate" name="$parent_ListDropDown" mixin="AuctionatorShoppingListDropdownMixin">
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
            <Offset>
              <AbsDimension x="0" y="-35"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnLoad method="OnLoad" />
        </Scripts>
      </Frame>

      <!-- List Create/Delete Buttons -->
      <Button inherits="UIPanelDynamicResizeButtonTemplate" name="$parent_CreateList" text="Create List" mixin="AuctionatorListCreateButtonMixin">
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent_ListDropDown" relativePoint="TOPRIGHT">
            <Offset>
              <AbsDimension x="0" y="-3" />
            </Offset>
          </Anchor>
        </Anchors>

        <Scripts>
          <OnLoad method="OnLoad" />
          <OnClick method="OnClick" />
        </Scripts>
      </Button>

      <Button inherits="UIPanelDynamicResizeButtonTemplate" name="$parent_DeleteList" text="Delete List" mixin="AuctionatorListDeleteButtonMixin">
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent_CreateList" relativePoint="TOPRIGHT" />
        </Anchors>
        <Scripts>
          <OnLoad method="OnLoad" />
          <OnClick method="OnClick" />
        </Scripts>
      </Button>

      <!-- List Editing Button -->
      <Button inherits="UIPanelDynamicResizeButtonTemplate" name="$parent_AddItem" text="Add Item" mixin="AuctionatorListItemAddButtonMixin">
        <Anchors>
          <Anchor point="BOTTOMLEFT" relativeTo="$parent" relativePoint="BOTTOMLEFT">
            <Offset>
              <AbsDimension x="4" y="3"/>
            </Offset>
          </Anchor>
        </Anchors>

        <Scripts>
          <OnLoad method="OnLoad" />
          <OnClick method="OnClick" />
        </Scripts>
      </Button>

      <!-- Shopping List item scroll frame -->
      <Frame name="$parent_ShoppingListItems" inherits="ScrollListTemplate" mixin="AuctionatorScrollListMixin">
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="7" y="-70"/>
          <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="-1" y="25" />
        </Anchors>
        <Scripts>
          <OnLoad method="OnLoad" />
          <OnShow method="OnShow" />
        </Scripts>
      </Frame>
    </Frames>
  </Frame>
</Ui>