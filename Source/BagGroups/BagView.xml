<Ui>
  <Frame name="AuctionatorBagViewTemplate" virtual="true" parentKey="View" mixin="AuctionatorBagViewMixin">
    <Scripts>
      <OnLoad method="OnLoad"/>
      <OnShow method="OnShow"/>
      <OnHide method="OnHide"/>
    </Scripts>
    <KeyValues>
      <KeyValue key="itemTemplate" value="AuctionatorBagViewItemTemplate" type="string" />
      <KeyValue key="sectionTemplate" value="AuctionatorBagViewSectionTemplate" type="string" />
      <KeyValue key="sectionInsetX" value="0" type="number" />
      <KeyValue key="clickEventName" value="BagItemClicked" type="string" />
    </KeyValues>
    <Frames>
      <EventFrame parentKey="ScrollBar" inherits="WowTrimScrollBar">
        <Anchors>
          <Anchor point="TOPRIGHT"/>
          <Anchor point="BOTTOMRIGHT"/>
        </Anchors>
      </EventFrame>
      <Frame inherits="WowScrollBox" parentKey="ScrollBox">
        <Anchors>
            <Anchor point="TOPLEFT"/>
            <Anchor point="BOTTOMRIGHT" relativeKey="$parent.ScrollBar" relativePoint="BOTTOMLEFT" y="3"/>
        </Anchors>
        <Frames>
          <Frame parentKey="ItemListingFrame">
            <KeyValues>
              <KeyValue key="scrollable" value="true" type="boolean" />
            </KeyValues>
          </Frame>
        </Frames>
      </Frame>
    </Frames>
  </Frame>
</Ui>
