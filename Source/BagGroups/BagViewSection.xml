<Ui>
  <Frame name="AuctionatorBagViewSectionTemplate" mixin="AuctionatorBagViewSectionMixin" virtual="true">
    <KeyValues>
      <!--<KeyValue key="rowWidth" value="6" type="number" />-->
      <KeyValue key="collapsable" value="true" type="boolean" />
      <KeyValue key="insetLeft" value="2" type="number" />
      <KeyValue key="sectionTitleHeight" value="22" type="number" />
      <KeyValue key="paddingBottom" value="0" type="number" />
    </KeyValues>
    <Size y="20"/>
    <Frames>
      <Button parentKey="SectionTitle">
        <ButtonText inherits="GameFontHighlight" justifyH="LEFT"/>
        <Size y="20" />

        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="2"/>
          <Anchor point="RIGHT" relativeKey="$parent" relativePoint="RIGHT" />
        </Anchors>

        <Scripts>>
          <OnClick>self:GetParent():ToggleOpen()</OnClick>
        </Scripts>
      </Button>
    </Frames>
  </Frame>
</Ui>
